@page
@model ProjetoRazorBKBank.Pages.Produtos.Add
@{
    ViewData["Title"] = "Adicionar novo produto";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <form method="post">
        <div class="form-group">
            <label asp-for="Produto.Descricao">@Html.DisplayNameFor(model => Model.Produto.Descricao)</label>
            <input asp-for="Produto.Descricao" type="text" class="form-control" placeholder="Insira um descrição">
        </div>
        <div class="form-group">
            <label asp-for="Produto.Preco">@Html.DisplayNameFor(model => Model.Produto.Preco)</label>
            <input asp-for="Produto.Preco" class="form-control"  placeholder="Insiro preço">
        </div>
        <div class="form-group">
            <label asp-for="Produto.Estoque">@Html.DisplayNameFor(model => Model.Produto.Estoque)</label>
            <input asp-for="Produto.Estoque" class="form-control" aplaceholder="Insira a quantidade em estoque">
        </div>
        <input type="submit" class="mt-3 btn btn-primary" value="Salvar">
    </form>
</div>