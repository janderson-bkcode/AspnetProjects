@page "{id}"
@model ProjetoRazorBKBank.Pages.Produtos.Edit
@{
    ViewData["Title"] = "Editar produto";
}

<h1>@ViewData["Title"]</h1>
<a class="btn btn-primary" asp-page="./Index">Voltar</a>
<div class="row">
    <form method="post">
            <input hidden="true" asp-for="Produto.Id"/>
        <div class="form-group">
            <label asp-for="Produto.Descricao">@Html.DisplayNameFor(model => Model.Produto.Descricao)</label>
            <input asp-for="Produto.Descricao" type="text" class="form-control" placeholder="Insira um descrição">
        </div>
        <div class="form-group">
            <label asp-for="Produto.Preco">@Html.DisplayNameFor(model => Model.Produto.Preco)</label>
            <input type="number" min="1" step="0.01" asp-for="Produto.Preco" class="form-control" placeholder="Insiro preço">
        </div>
        <div class="form-group">
            <label asp-for="Produto.Estoque">@Html.DisplayNameFor(model => Model.Produto.Estoque)</label>
            <input type="number" step="1" min="1" asp-for="Produto.Estoque" class="form-control" aplaceholder="Insira a quantidade em estoque">
        </div>
        <input type="submit" class="mt-3 btn btn-primary" value="Salvar Alterações">
    </form>
</div>